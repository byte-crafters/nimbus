    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug backend (local)",
            "request": "launch",
            "runtimeArgs": [
                "run",
                "be:start:local:dev"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "cwd": "${workspaceFolder}/backend",
            "type": "node"
        },
        {
            "name": "Debug frontend (local)",
            "request": "launch",
            "runtimeArgs": [
                "run",
                "fe:dev"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "cwd": "${workspaceFolder}/frontend",
            "type": "node"
        }
    ]
}