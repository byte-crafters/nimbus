{
    "name": "nimbus-backend",
    "version": "1.0.0",
    "description": "",
    "author": "",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "be:build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nest start --exec 'C/Program Files/nodejs/node -r tsconfig-paths/register -r ts-node/register ./src/main.ts'",
        "be:start:local:dev": "npm run be:postgres:dev:mg && npm run be:mongo:dev:sync && dotenv -e .env.local.dev -- nest start --debug --watch",
        "be:start:dev": "npm run be:postgres:dev:mg && npm run be:mongo:dev:sync && dotenv -e .env.local.dev -- nest start --debug --watch",
        "prepare-dist": "rm -rf ./dist && mkdirp ./dist/prisma/generated/ && cp -r ./prisma/generated/* ./dist/prisma/generated/",
        "start:debug": "nest start --debug --watch",
        "be:start:prod": "node dist/src/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
        "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:run-all": "jest --config ./jest.config.ts",
        "be:test:e2e": "jest --config ./src/test/jest-e2e.json",
        "be:test:dev": "dotenv -e .env.local.dev -- jest --config ./jest.config.ts",
        "be:start:b": "nest start -b swc",
        "app:run": "tsc ./app/app.ts && node ./app/app.js",
        "be:mongo:dev:sync": "dotenv -e .env.local.dev -- prisma db push --schema ./prisma/schema.mongo.dev.prisma",
        "be:postgres:dev:mg": "npm run be:postgres:dev:migrate && npm run be:postgres:dev:generate",
        "be:postgres:dev:migrate": "dotenv -e .env.local.dev -- prisma migrate dev --schema ./prisma/schema.postgresql.dev.prisma --name init",
        "be:postgres:dev:generate": "dotenv -e .env.local.dev -- prisma generate --schema prisma/schema.postgresql.dev.prisma",
        "postgres:prisma:generate": "prisma generate --schema prisma/schema.main.postgresql.prisma",
        "postgres:prisma": "prisma generate --schema prisma/schema.main.postgresql.prisma && prisma migrate dev --schema ./prisma/schema.main.postgresql.prisma --name init",
        "postgres:prisma:migrate": "prisma migrate dev --schema ./prisma/schema.main.postgresql.prisma --name init",
        "lint:run": "eslint .",
        "services:local:up": "docker compose --file ../docker-compose.local-deploy.dev.yaml up -d --build",
        "services:local:down": "docker compose --file ../docker-compose.local-deploy.dev.yaml down -v",
        "prisma:postgres:reset": "prisma migrate reset --schema ./prisma/schema.main.postgresql.prisma --force",
        "test:local:run-all": "npm run test:run-all && npm run test:e2e",
        "deploy:local": "npm run prisma:postgres:reset && npm run services:local:up && npm run postgres:prisma && npm run mongo:prisma && npm run test:run-all && npm run test:e2e",
        "test:unit": "dotenv -e .env.local.dev -- jest --config ./jest.config.ts"
    },
    "dependencies": {
        "@nestjs/common": "^10.0.0",
        "@nestjs/core": "^10.0.0",
        "@nestjs/jwt": "^10.1.1",
        "@nestjs/platform-express": "^10.0.0",
        "@nestjs/swagger": "^7.1.14",
        "@prisma/client": "^5.5.2",
        "bson": "^6.6.0",
        "cookie-parser": "^1.4.6",
        "dotenv-cli": "^7.3.0",
        "mkdirp": "^3.0.1",
        "redis": "^4.6.10",
        "reflect-metadata": "^0.1.13",
        "rxjs": "^7.8.1",
        "uuid": "^9.0.1"
    },
    "devDependencies": {
        "@nestjs/cli": "^10.0.0",
        "@nestjs/schematics": "^10.0.0",
        "@nestjs/testing": "^10.0.0",
        "@swc/cli": "^0.1.62",
        "@swc/core": "^1.3.93",
        "@types/cookie-parser": "^1.4.6",
        "@types/express": "^4.17.17",
        "@types/jest": "^29.5.2",
        "@types/multer": "^1.4.11",
        "@types/node": "^20.3.1",
        "@types/supertest": "^2.0.12",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "eslint": "^8.42.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-prettier": "^5.0.0",
        "jest": "^29.5.0",
        "prettier": "^3.0.0",
        "prisma": "^5.5.2",
        "source-map-support": "^0.5.21",
        "supertest": "^6.3.3",
        "ts-jest": "^29.1.0",
        "ts-loader": "^9.4.3",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.1.3"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "./src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}