{
    "name": "frontend",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "fe:dev": "next dev -p 4000",
        "fe:build": "next build",
        "fe:start": "next start -p 4000",
        "format:all": "prettier --write src",
        "format:staged": "prettier --write $(git diff --staged --name-only --diff-filter d | xargs)",
        "fe:lint": "npm run format:all && next lint",
        "fe:fix": "next lint --fix"
    },
    "dependencies": {
        "next": "14.1.0",
        "react": "^18",
        "react-dom": "^18"
    },
    "devDependencies": {
        "@types/node": "^20",
        "@types/react": "^18",
        "@types/react-dom": "^18",
        "eslint": "^8",
        "eslint-config-next": "14.1.0",
        "eslint-config-prettier": "^9.1.0",
        "prettier": "3.2.5",
        "typescript": "^5"
    }
}
